{
  "name": "eppo/php-sdk",
  "description": "Eppo PHP SDK",
  "type": "library",
  "license": "MIT",
  "homepage": "https://github.com/Eppo-exp/php-sdk",
  "authors": [
    {
      "name": "Pavlo Khrebto",
      "email": "pavel@fluxon.com"
    }
  ],
  "minimum-stability": "stable",
  "autoload": {
    "psr-4": {
      "Eppo\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Eppo\\Tests\\": "tests/"
    }
  },
  "require": {
    "php": "^8.1",
    "ext-json": "*",
    "sarahman/simple-filesystem-cache": "^1.0",
    "shrikeh/teapot": "^2.3",
    "composer/semver": "^3.4"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.6",
    "google/cloud-storage": "^1.30",
    "ext-posix": "*",
    "ext-pcntl": "*"
  },
  "config": {
    "allow-plugins": {
      "php-http/discovery": true
    }
  }
}
